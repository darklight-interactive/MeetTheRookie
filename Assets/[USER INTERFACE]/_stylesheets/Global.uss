.selected {
    transition-duration: 0.1s;
    transition-timing-function: ease-in;
}

.clicked {
    border-left-color: rgb(0, 0, 0);
    border-right-color: rgb(0, 0, 0);
    border-top-color: rgb(0, 0, 0);
    border-bottom-color: rgb(0, 0, 0);
    border-top-width: 10px;
    border-right-width: 10px;
    border-bottom-width: 10px;
    border-left-width: 10px;
}

.icon {
    max-width: 128px;
    max-height: 128px;
    height: 128px;
    width: 128px;
    position: absolute;
}

#background {
}

#header {
    flex-basis: 25%;
}

#body {
    flex-basis: 100%;
    flex-direction: row;
    flex-grow: 1;
    align-items: flex-start;
    align-self: flex-start;
}

#footer {
    flex-basis: 25%;
    align-items: center;
}

#background {
    flex-grow: 1;
    justify-content: center;
    align-self: center;
    width: 100%;
    height: 100%;
    background-color: rgb(30, 29, 57);
    position: absolute;
}

SelectableButton {
    background-image: url("project://database/Assets/[SPRITES]/_ui/ui_boxes.png?fileID=2371981046512543649&guid=87d54583fce2d4948a580954f560d140&type=3#ui_boxes_3");
    margin-top: 0;
    margin-right: 0;
    margin-bottom: 0;
    margin-left: 0;
    padding-top: 2.5%;
    padding-right: 2.5%;
    padding-bottom: 2.5%;
    padding-left: 2.5%;
    background-color: rgba(255, 255, 255, 0.43);
    color: rgb(255, 255, 255);
    font-size: 200%;
    flex-grow: 1;
    max-height: 64px;
    align-self: stretch;
}

SelectableButton.selected {
    scale: 1.025 1.025;
    transition-property: scale;
    transition-duration: 0.5s;
    border-top-width: 10px;
    border-right-width: 10px;
    border-bottom-width: 10px;
    border-left-width: 10px;
    border-left-color: rgb(60, 34, 106);
    border-right-color: rgb(60, 34, 106);
    border-top-color: rgb(60, 34, 106);
    border-bottom-color: rgb(60, 34, 106);
}

GroupBox {
    flex-grow: 1;
    justify-content: space-around;
    padding-top: 10px;
    padding-right: 10px;
    padding-bottom: 10px;
    padding-left: 10px;
}

SpeechBubble Label.unity-text-element {
    -unity-font-definition: resource('Fonts/digital_disco/DigitalDisco');
}

VisualElement.panel {
    flex-grow: 1;
    align-self: stretch;
    background-color: rgba(32, 46, 55, 0.57);
    padding-top: 2.5%;
    padding-right: 2.5%;
    padding-bottom: 2.5%;
    padding-left: 2.5%;
}

VisualElement.panel.selected {
    flex-grow: 1;
    align-self: stretch;
    flex-basis: 100%;
}

.unity-text-element {
    -unity-font-definition: resource('Fonts/digital_disco/DigitalDisco-Thin');
    white-space: normal;
}

#title.unity-text-element {
    font-size: 128px;
    color: rgb(255, 255, 255);
    -unity-font-definition: resource('Fonts/digital_disco/DigitalDisco');
    white-space: nowrap;
}

#h1.unity-text-element {
    font-size: 96px;
    color: rgb(255, 255, 255);
    -unity-font-definition: resource('Fonts/digital_disco/DigitalDisco');
    white-space: nowrap;
}

#h2.unity-text-element {
    font-size: 69px;
    color: rgb(255, 255, 255);
    -unity-font-definition: resource('Fonts/digital_disco/DigitalDisco');
    white-space: nowrap;
}

#h3.unity-text-element {
    font-size: 32px;
    color: rgb(255, 255, 255);
    -unity-font-definition: resource('Fonts/digital_disco/DigitalDisco');
    white-space: nowrap;
}
